<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_manage_tokens"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/background_divider_top_bottom"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_add_hide_tokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/font_semibold"
        android:text="@string/add_hide_tokens"
        android:textColor="@color/colorHighlight"
        android:textSize="17sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_add_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_plus"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_buy_hftc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/font_semibold"
        android:text="Buy HFTC"
        android:textColor="@color/hftc"
        android:textSize="17sp" />

</LinearLayout>